@model PostsListViewModel



        <h1>@Model.CurrentCategory</h1>

        @foreach (var post in Model.Posts)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div>
                    <img class="thumbnail img-responsive" src="~/Images/@post.ImageThumbnailUrl" alt="" />
                    <div>
                        <h3>@post.Title</h3>
                        <h4>@post.Date</h4>
                        
                    </div>
                </div>
            </div>
        }
