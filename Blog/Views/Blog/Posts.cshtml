@model PostsListViewModel



        <h2>@Model.CurrentCategory</h2>
        <div class="row">
            @foreach (var post in Model.Posts)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="images-container">

                        <img class="thumbnail img-responsive" src="~/Images/@post.ImageThumbnailUrl" alt="" />
                        <button style="z-index:2; position: absolute">
                            <div>
                                <h3>@post.Title</h3>
                                <h4>@post.Date</h4>

                            </div>
                        </button>
                    </div>
                </div>
            }
        </div>
